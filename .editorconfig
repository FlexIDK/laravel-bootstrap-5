root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.csv]
indent_style = tab
indent_size = 4
insert_final_newline = false

[*.php]
indent_size = 4

[*.xml]
indent_size = 4

[*.blade.php]
indent_size = 2

[*.html]
indent_size = 2

[*.json]
indent_size = 2

[*.{js,vue}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.{scss,css,sass}]
indent_size = 2

